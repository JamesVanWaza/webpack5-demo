{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint"
        ]
    },
    "hosting": {
        "public": "public",
        "site": "webpack-5-demo",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ]
    },
    "storage": {
        "rules": "storage.rules"
    },
    "emulators": {
        "functions": {
            "port": 1007
        },
        "firestore": {
            "port": 2007
        },
        "hosting": {
            "port": 3007
        },
        "pubsub": {
            "port": 4007
        },
        "ui": {
            "enabled": true
        }
    }
}